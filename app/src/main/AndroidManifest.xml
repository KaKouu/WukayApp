<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.wukay.wukayapp">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/lapin_lauch_ic"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LevelsActivity"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait" >
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>

        <activity android:name=".WhatIsThisActivity"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".IHM.DifficultyActivity"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".VictoryActivity"
                  android:configChanges="orientation"
                  android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".LifePopActivity"
                  android:theme="@style/AppTheme.LifePop">
        </activity>
    </application>

</manifest>