<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="@drawable/fond_lac">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="114dp" app:srcCompat="@drawable/animaux_poisson"
            android:id="@+id/imageFish"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintVertical_bias="0.345"/>
    <ImageView
            android:layout_width="162dp"
            android:layout_height="136dp" app:srcCompat="@drawable/animaux_lama"
            android:id="@+id/imageLama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.962"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"/>
    <ImageView
            android:layout_width="136dp"
            android:layout_height="125dp" app:srcCompat="@drawable/animaux_vache"
            android:id="@+id/imageCow"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintVertical_bias="0.501"/>
    <ImageView
            android:layout_width="117dp"
            android:layout_height="96dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/imageSheep" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.779"
            app:layout_constraintVertical_bias="0.482"/>
    <ImageView
            android:layout_width="161dp"
            android:layout_height="134dp" app:srcCompat="@drawable/animaux_elephant"
            android:id="@+id/imageElephant"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.572" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.997"/>
    <ImageView
            android:layout_width="143dp"
            android:layout_height="116dp" app:srcCompat="@drawable/animaux_cochon"
            android:id="@+id/imagePig"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.736"/>

    <ImageView
            android:layout_width="411dp"
            android:layout_height="508dp" app:srcCompat="@drawable/skin_lapinou"
            android:id="@+id/imageLapinou" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.576"/>

    <ImageView
            android:layout_width="140dp"
            android:layout_height="115dp" app:srcCompat="@drawable/animaux_girafe"
            android:id="@+id/imageGirafe"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.103" app:layout_constraintVertical_bias="0.118"/>
    <Button
            android:text="Commencer l'aventure !"
            android:layout_width="543dp"
            android:layout_height="80dp"
            android:id="@+id/startButton"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textSize="30sp" android:typeface="normal" android:textAllCaps="false" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" style="?attr/borderlessButtonStyle"
            android:background="@drawable/rounded_button" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Professeur Lapinou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle2" android:layout_marginBottom="8sp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="60sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="0.516"/>
    <TextView
            android:text="Professeur Lapinou"
            android:layout_width="569dp"
            android:layout_height="73dp"
            android:id="@+id/mainTitle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="60sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/holo_orange_light"
            app:layout_constraintHorizontal_bias="0.437"/>
</android.support.constraint.ConstraintLayout>