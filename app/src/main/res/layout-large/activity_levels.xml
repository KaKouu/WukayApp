            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp" android:id="@+id/levelsScroll">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="@drawable/bg_levels_2">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="87dp"
                                android:layout_height="89dp"
                                android:id="@+id/lapinouSkin"
                                android:layout_marginTop="1100dp"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="105dp" app:layout_constraintHorizontal_bias="0.289"
                                app:layout_constraintVertical_bias="1.0" app:srcCompat="@drawable/skin_lapinou"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" android:layout_marginEnd="192dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp" android:id="@+id/header"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="122dp"
                            android:layout_height="match_parent" app:srcCompat="@drawable/hud_levels2"
                            android:id="@+id/fondCarrot" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" android:layout_marginEnd="39dp"
                            android:layout_marginTop="0dp"/>
                    <ImageView
                            android:layout_width="195dp"
                            android:layout_height="match_parent" app:srcCompat="@drawable/hud_levels"
                            android:id="@+id/fondCoeur" android:layout_alignParentTop="true"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:layout_alignParentStart="true" android:layout_marginStart="47dp"/>
                    <TextView
                            android:text="140"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberCarrots"
                            android:fontFamily="@font/grobold" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="36dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="13dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" android:layout_marginStart="26dp"
                            android:layout_alignStart="@+id/fondCarrot"/>
                    <ImageView
                            android:layout_width="23dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/icon_carrot2"
                            android:id="@+id/iconCarrot"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.909"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_marginTop="1dp"
                            android:layout_alignParentTop="true"/>
                    <TextView
                            android:text="10 / 10"
                            android:layout_width="wrap_content"
                            android:layout_height="31dp"
                            android:id="@+id/lifeText" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/numberCarrots"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.193"
                            app:layout_constraintVertical_bias="0.0"
                            android:layout_marginEnd="55dp"
                            android:layout_marginTop="9dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="12dp"
                            android:layout_marginStart="45dp" android:layout_alignEnd="@+id/fondCoeur"
                            android:layout_alignStart="@+id/fondCoeur" android:layout_alignTop="@+id/fondCoeur"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/footer" android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="519dp" android:id="@+id/relativeLayout">

                    <ImageView
                            android:layout_width="153dp"
                            android:layout_height="170dp" app:srcCompat="@drawable/hud_levels2"
                            android:id="@+id/imageView15" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:rotation="90" android:layout_marginStart="480dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent"
                    />
                    <ImageView
                            android:layout_width="109dp"
                            android:layout_height="93dp" app:srcCompat="@drawable/icon_life"
                            android:id="@+id/heart"
                            android:layout_marginBottom="140dp"
                            android:layout_marginStart="180dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:layout_width="78dp"
                            android:layout_height="64dp" app:srcCompat="@drawable/icone_fleche_retour"
                            android:id="@+id/imageRetour"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.071"
                    />
                    <ImageView
                            android:layout_width="129dp"
                            android:layout_height="58dp" app:srcCompat="@drawable/hud_levels3"

                            android:id="@+id/fondLevel"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.966"
                            app:layout_constraintEnd_toStartOf="@+id/playButton" android:layout_marginEnd="136dp"/>
                    <TextView
                            android:text=" = 0"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content" android:id="@+id/numberOfLife"
                            android:layout_marginBottom="168dp"
                            android:layout_marginStart="198dp"
                            android:fontFamily="@font/grobold" android:textSize="30sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="-57dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/playButton"
                            app:layout_constraintHorizontal_bias="0.631"/>
                    <TextView
                            android:text="Niveau : 0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/levelCounter"
                            android:fontFamily="@font/grobold" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintBottom_toBottomOf="@+id/fondLevel"
                            app:layout_constraintTop_toTopOf="@+id/fondLevel"
                            app:layout_constraintVertical_bias="0.441"
                            app:layout_constraintEnd_toEndOf="@+id/fondLevel"
                            app:layout_constraintStart_toStartOf="@+id/fondLevel"/>
                    <Button
                            android:text="Jouer !"
                            android:layout_width="109dp"
                            android:layout_height="58dp"
                            android:id="@+id/playButton"
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/grobold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_bias="1.0"
                            android:layout_marginBottom="8dp"/>
                    <ImageView
                            android:layout_width="74dp"
                            android:layout_height="68dp" app:srcCompat="@drawable/ic_parameter"
                            android:id="@+id/button_settings"
                            android:layout_marginTop="112dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"/>
                    <Button
                            android:text="DÃ©sactiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTuto" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.052"
                            app:layout_constraintVertical_bias="0.997"/>
                    <ImageView
                            android:layout_width="64dp"
                            android:layout_height="153dp" app:srcCompat="@drawable/icone_shop2"
                            android:id="@+id/shopIcone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.427"
                            android:layout_alignParentBottom="true"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                            android:layout_width="166dp"
                            android:layout_height="182dp" app:srcCompat="@drawable/ic_shop_p"
                            android:id="@+id/imageView" android:rotation="-20"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="464dp"
                            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
                    />
                    <TextView
                            android:text="Boutique"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                            android:rotation="-20" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.972"
                            app:layout_constraintVertical_bias="0.286"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>