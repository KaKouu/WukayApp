<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pop_up_animal"
        tools:context=".PopUpAnimalFind">

    <ImageView
            android:layout_width="266dp"
            android:layout_height="237dp" app:srcCompat="@drawable/animaux_lion"
            android:id="@+id/animalFind" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.556" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/nameAnimalFind"/>
    <TextView
            android:text="Animal"
            android:layout_width="279dp"
            android:layout_height="67dp"
            android:id="@+id/nameAnimalFind" android:textAlignment="center"
            android:fontFamily="@font/grobold" android:textSize="35sp" android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.471"/>
    <ImageView
            android:layout_width="62dp"
            android:layout_height="34dp" app:srcCompat="@drawable/icon_red_cross"
            android:id="@+id/closeButton2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>