<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/WhatIsThisActivity"
        tools:context=".whatIsThisAnimal.WhatIsThisAnimalActivity"
        android:background="@drawable/bg_what_is_this">

    <ImageView
            android:layout_width="195dp"
            android:layout_height="173dp" app:srcCompat="@drawable/animaux_mouton_silhouette"
            android:id="@+id/animalPic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.504"/>
    <ImageView
            android:layout_width="137dp"
            android:layout_height="169dp"
            android:id="@+id/animalAnwser1"
            app:srcCompat="@drawable/animaux_girafe"
            app:layout_constraintEnd_toStartOf="@+id/animalAnwser2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="338dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.757"/>
    <ImageView
            android:layout_width="173dp"
            android:layout_height="160dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/animalAnwser2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="176dp"
            android:layout_height="164dp" app:srcCompat="@drawable/animaux_lion"
            android:id="@+id/animalAnwser3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913"/>
    <TextView
            android:layout_width="279dp"
            android:layout_height="42dp"
            android:id="@+id/resultat" android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="81dp"
            android:layout_height="112dp" app:srcCompat="@drawable/icone_fleche_retour"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/buttonBack"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@drawable/tete_lapinou_score_0"
            android:id="@+id/scoreImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texteScore"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"/>
</android.support.constraint.ConstraintLayout>