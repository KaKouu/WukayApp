<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".DifficultyActivity"
>

    <ImageView
            android:src="@drawable/animaux_cochon"
            android:layout_width="119dp"
            android:layout_height="131dp"
            android:id="@+id/easyPic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:src="@drawable/animaux_lama"
            android:layout_width="154dp"
            android:layout_height="177dp"
            android:id="@+id/hardPic" app:layout_constraintStart_toEndOf="@+id/easyPic"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="220dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.553"/>
    <TextView
            android:text="facile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEasy" android:textSize="24sp"
            android:fontFamily="@font/grobold"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtHard" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.445" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/easyPic" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHard" android:textSize="24sp"
            android:fontFamily="@font/grobold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/hardPic" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.538"
            android:text="diffcile"/>
</android.support.constraint.ConstraintLayout>