<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="@drawable/fond_lac">

    <ImageView
            android:layout_width="95dp"
            android:layout_height="63dp" app:srcCompat="@drawable/animaux_lama"
            android:id="@+id/imageLama"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="404dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.992"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891"/>
    <ImageView
            android:layout_width="103dp"
            android:layout_height="86dp" app:srcCompat="@drawable/animaux_vache"
            android:id="@+id/imageCow"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.462"/>
    <ImageView
            android:layout_width="74dp"
            android:layout_height="69dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/imageSheep" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.697"
            app:layout_constraintVertical_bias="0.419"/>
    <ImageView
            android:layout_width="130dp"
            android:layout_height="135dp" app:srcCompat="@drawable/animaux_elephant"
            android:id="@+id/imageElephant"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="268dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.543"/>
    <ImageView
            android:layout_width="129dp"
            android:layout_height="92dp" app:srcCompat="@drawable/animaux_cochon"
            android:id="@+id/imagePig"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.702"/>
    <ImageView
            android:layout_width="260dp"
            android:layout_height="320dp" app:srcCompat="@drawable/personnage_lapinou"
            android:id="@+id/imageLapinou" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/startButton"
            app:layout_constraintHorizontal_bias="0.518"/>
    <ImageView
            android:layout_width="54dp"
            android:layout_height="57dp" app:srcCompat="@drawable/animaux_poisson"
            android:id="@+id/imageFish"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintVertical_bias="0.293"/>
    <ImageView
            android:layout_width="97dp"
            android:layout_height="62dp" app:srcCompat="@drawable/animaux_girafe"
            android:id="@+id/imageGirafe"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.118" app:layout_constraintVertical_bias="0.087"/>
    <Button
            android:text="Commencer l'aventure !"
            android:layout_width="253dp"
            android:layout_height="49dp"
            android:id="@+id/startButton"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textSize="20sp" android:typeface="normal" android:textAllCaps="false" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" style="?attr/borderlessButtonStyle"
            android:background="@drawable/rounded_button" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="Professeur Lapinou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="37sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="0.516"/>
    <TextView
            android:text="Professeur Lapinou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/holo_orange_light"/>
</android.support.constraint.ConstraintLayout>