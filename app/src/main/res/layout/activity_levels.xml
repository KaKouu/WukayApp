<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelsActivity"
        >


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp" android:id="@+id/levelsScroll">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="@drawable/bg_levels_2">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="87dp"
                                android:layout_height="89dp"
                                android:id="@+id/lapinouSkin"
                                android:layout_marginTop="1087dp"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="13dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="118dp" app:layout_constraintHorizontal_bias="0.289"
                                app:layout_constraintVertical_bias="1.0" app:srcCompat="@drawable/skin_lapinou"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" android:layout_marginEnd="179dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp" android:id="@+id/header"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/hud_levels2"
                            android:id="@+id/imageView2" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" android:layout_marginEnd="0dp"
                            android:layout_marginTop="0dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/hud_levels"
                            android:id="@+id/hud1" android:layout_alignParentTop="true"
                            android:layout_alignEnd="@+id/lifeText" android:layout_marginTop="0dp"
                            android:layout_marginEnd="-19dp"/>
                    <TextView
                            android:text="140"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/numberCarrots"
                            android:fontFamily="@font/grobold" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="36dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="13dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" app:srcCompat="@drawable/icone_shop2"
                            android:id="@+id/shopIcone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/numberCarrots"
                            android:layout_marginEnd="7dp" app:layout_constraintStart_toEndOf="@+id/lifeText"
                            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.925"
                            android:layout_marginBottom="0dp" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="0dp"
                            android:layout_alignParentTop="true" android:layout_toStartOf="@+id/numberCarrots"
                            android:layout_alignParentBottom="true"/>
                    <ImageView
                            android:layout_width="23dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/icon_carrot2"
                            android:id="@+id/iconCarrot"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.909"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_marginTop="0dp"
                            android:layout_alignParentTop="true"/>
                    <TextView
                            android:text="10 / 10"
                            android:layout_width="123dp"
                            android:layout_height="35dp"
                            android:id="@+id/lifeText" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="-2dp"
                            app:layout_constraintEnd_toStartOf="@+id/numberCarrots" android:layout_marginBottom="5dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="41dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.193"
                            app:layout_constraintVertical_bias="0.0" android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/shopIcone" android:layout_alignParentBottom="true"
                            android:layout_alignParentStart="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/footer" android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="519dp" android:id="@+id/relativeLayout">

                    <Button
                            android:text="fullLife"
                            android:layout_width="71dp"
                            android:layout_height="43dp"
                            android:id="@+id/testLifeFull"

                            app:layout_constraintEnd_toEndOf="@+id/fondLevel"
                            android:layout_marginEnd="-13dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.022"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_settings"
                            app:layout_constraintVertical_bias="0.496"/>
                    <ImageView
                            android:layout_width="109dp"
                            android:layout_height="93dp" app:srcCompat="@drawable/icon_life"
                            android:id="@+id/heart"
                            android:layout_marginBottom="228dp"
                            android:layout_marginStart="88dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:layout_width="42dp"
                            android:layout_height="37dp" app:srcCompat="@drawable/icone_fleche_retour"
                            android:id="@+id/imageRetour"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.054"
                    />
                    <ImageView
                            android:layout_width="129dp"
                            android:layout_height="58dp" app:srcCompat="@drawable/hud_levels3"

                            android:layout_marginEnd="224dp"
                            android:id="@+id/fondLevel"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.531"/>
                    <TextView
                            android:text=" = 0"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content" android:id="@+id/numberOfLife"
                            android:layout_marginBottom="252dp"
                            android:layout_marginStart="198dp"
                            android:fontFamily="@font/grobold" android:textSize="30sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="-57dp" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/playButton"
                            app:layout_constraintHorizontal_bias="0.05"/>
                    <TextView
                            android:text="Niveau : 0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/levelCounter"
                            android:fontFamily="@font/grobold" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintBottom_toBottomOf="@+id/fondLevel"
                            app:layout_constraintTop_toTopOf="@+id/fondLevel"
                            app:layout_constraintVertical_bias="0.441"
                            app:layout_constraintEnd_toEndOf="@+id/fondLevel"
                            app:layout_constraintStart_toStartOf="@+id/fondLevel"/>
                    <Button
                            android:text="-1 LIFE"
                            android:layout_width="71dp"
                            android:layout_height="43dp"
                            android:id="@+id/testLife2"

                            app:layout_constraintEnd_toEndOf="@+id/fondLevel"
                            android:layout_marginEnd="-13dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_settings"
                            app:layout_constraintVertical_bias="0.009"/>
                    <Button
                            android:text="Jouer !"
                            android:layout_width="109dp"
                            android:layout_height="58dp"
                            android:id="@+id/playButton"
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/grobold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.992"
                            app:layout_constraintVertical_bias="0.983"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="12dp"/>
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/ic_parameter"
                            android:id="@+id/button_settings"
                            android:layout_marginTop="88dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>