<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelsActivity"
        android:background="#629c44">


    <ImageView
            android:layout_width="386dp"
            android:layout_height="578dp" app:srcCompat="@drawable/bg_levels"
            android:id="@+id/backgroundLevels"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="centerCrop"/>
    <ImageView
            android:layout_width="64dp"
            android:layout_height="130dp" app:srcCompat="@drawable/personnage_lapinou"
            android:id="@+id/imageView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.289"
            app:layout_constraintVertical_bias="0.98"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <Button
            android:text="Jouer !"
            android:layout_width="106dp"
            android:layout_height="59dp"
            android:id="@+id/playButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintVertical_bias="0.965" android:background="@drawable/rounded_button"
            android:fontFamily="@font/shadedlarch"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="51dp" app:srcCompat="@drawable/icone_fleche_retour"
            android:id="@+id/imageRetour" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintVertical_bias="0.072"/>
    <Button
            android:text="CARROTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testCarrotes" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.699"/>
    <Button
            android:text="LIFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testLife" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.795"/>
    <TextView
            android:text="10 / 10"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:id="@+id/lifeText" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
            app:layout_constraintStart_toStartOf="@+id/backgroundLevels"
            app:layout_constraintTop_toTopOf="@+id/backgroundLevels" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/backgroundLevels"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundLevels" app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintVertical_bias="0.023"/>
    <TextView
            android:text="140"
            android:layout_width="52dp"
            android:layout_height="29dp"
            android:id="@+id/numberCarrots"
            android:fontFamily="@font/grobold" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="@+id/backgroundLevels"
            app:layout_constraintTop_toTopOf="@+id/backgroundLevels"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundLevels" app:layout_constraintVertical_bias="0.027"
            app:layout_constraintEnd_toEndOf="@+id/backgroundLevels" app:layout_constraintHorizontal_bias="0.814"/>
    <ImageView
            android:layout_width="37dp"
            android:layout_height="44dp" app:srcCompat="@drawable/icon_carrot2"
            android:id="@+id/iconCarrot"
            app:layout_constraintStart_toStartOf="@+id/backgroundLevels"
            app:layout_constraintEnd_toEndOf="@+id/backgroundLevels" app:layout_constraintHorizontal_bias="0.888"
            app:layout_constraintTop_toTopOf="@+id/backgroundLevels" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundLevels" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>