<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelsActivity"
        >


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp" android:id="@+id/levelsScroll">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:background="@drawable/bg_levels_2">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="87dp"
                                android:layout_height="89dp"
                                android:id="@+id/lapinouSkin"
                                android:layout_marginTop="1089dp"
                                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="11dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="120dp" app:layout_constraintHorizontal_bias="0.289"
                                app:layout_constraintVertical_bias="1.0" app:srcCompat="@drawable/skin_lapinou"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true" android:layout_marginEnd="177dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="52dp" android:id="@+id/header"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/hud_levels2"
                            android:id="@+id/fondCarrot" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" android:layout_marginEnd="0dp"
                            android:layout_marginTop="0dp"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/hud_levels"
                            android:id="@+id/fondCoeur" android:layout_alignParentTop="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="-9dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="21dp" android:layout_alignBottom="@+id/lifeText"/>
                    <TextView
                            android:text="140"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:id="@+id/numberCarrots"
                            android:fontFamily="@font/grobold" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginEnd="15dp"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="14dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true" android:layout_marginStart="12dp"
                            android:layout_alignStart="@+id/fondCarrot"/>
                    <ImageView
                            android:layout_width="23dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/icon_carrot2"
                            android:id="@+id/iconCarrot"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintHorizontal_bias="0.909"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_marginTop="0dp"
                            android:layout_alignParentTop="true"/>
                    <TextView
                            android:text="10 / 10"
                            android:layout_width="123dp"
                            android:layout_height="35dp"
                            android:id="@+id/lifeText" android:textSize="24sp"
                            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/numberCarrots"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.193"
                            app:layout_constraintVertical_bias="0.0"
                            android:layout_alignParentEnd="true" android:layout_marginEnd="222dp"
                            android:layout_marginTop="8dp"
                            android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                            android:layout_marginBottom="9dp" android:layout_alignParentStart="true"
                            android:layout_marginStart="39dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/footer" android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/relativeLayout">

                    <ImageView
                            android:layout_width="139dp"
                            android:layout_height="171dp" app:srcCompat="@drawable/hud_levels2"
                            android:id="@+id/fondBoutique" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:rotation="90" android:layout_marginStart="260dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.404"/>
                    <ImageView
                            android:layout_width="42dp"
                            android:layout_height="37dp" app:srcCompat="@drawable/icone_fleche_retour"
                            android:id="@+id/imageRetour"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.054"
                    />
                    <ImageView
                            android:layout_width="129dp"
                            android:layout_height="58dp" app:srcCompat="@drawable/hud_levels3"

                            android:id="@+id/fondLevel"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.998"
                            app:layout_constraintEnd_toStartOf="@+id/playButton" android:layout_marginEnd="112dp"/>
                    <TextView
                            android:text="Niveau : 0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/levelCounter"
                            android:fontFamily="@font/grobold" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintBottom_toBottomOf="@+id/fondLevel"
                            app:layout_constraintTop_toTopOf="@+id/fondLevel"
                            app:layout_constraintVertical_bias="0.441"
                            app:layout_constraintEnd_toEndOf="@+id/fondLevel"
                            app:layout_constraintStart_toStartOf="@+id/fondLevel"/>
                    <Button
                            android:text="Jouer !"
                            android:layout_width="108dp"
                            android:layout_height="78dp"
                            android:id="@+id/playButton"
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/grobold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintVertical_bias="0.986"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"/>
                    <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp" app:srcCompat="@drawable/ic_parameter"
                            android:id="@+id/button_settings"
                            android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                    <Button
                            android:text="Désactiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTuto" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.027"
                            app:layout_constraintVertical_bias="0.887"/>
                    <ImageView
                            android:layout_width="64dp"
                            android:layout_height="153dp" app:srcCompat="@drawable/icone_shop2"
                            android:id="@+id/shopIcone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.427"
                            android:layout_alignParentBottom="true"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                            android:layout_width="166dp"
                            android:layout_height="182dp" app:srcCompat="@drawable/ic_shop_p"
                            android:id="@+id/shopExtra" android:rotation="-20"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="232dp"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.2"/>
                    <TextView
                            android:text="Boutique"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/shopExtra2" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                            android:rotation="-20" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.972"
                            app:layout_constraintVertical_bias="0.286"/>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>