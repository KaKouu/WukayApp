<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LevelsActivity"
        android:background="@drawable/bg_levels">


    <ImageView
            android:layout_width="64dp"
            android:layout_height="130dp"
            android:id="@+id/lapinouSkin"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.289"
            app:layout_constraintVertical_bias="1.0" app:srcCompat="@drawable/skin_lapinou"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="vertical"/>
    <Button
            android:text="Jouer !"
            android:layout_width="106dp"
            android:layout_height="59dp"
            android:id="@+id/playButton"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/grobold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.927"
            app:layout_constraintVertical_bias="0.983"/>
    <ImageView
            android:layout_width="55dp"
            android:layout_height="51dp" app:srcCompat="@drawable/icone_fleche_retour"
            android:id="@+id/imageRetour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.054"/>
    <Button
            android:text="CARROTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testCarrotes"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="328dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="LIFE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testLife"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/testCarrotes" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="224dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/testSkin"
            app:layout_constraintVertical_bias="0.348" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="SKIN BLANC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testSkin"
            android:layout_marginBottom="72dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="SKIN JAUNE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testSkin2"
            android:layout_marginBottom="268dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="10 / 10"
            android:layout_width="91dp"
            android:layout_height="27dp"
            android:id="@+id/lifeText" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/numberCarrots" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.193"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="140"
            android:layout_width="52dp"
            android:layout_height="29dp"
            android:id="@+id/numberCarrots"
            android:fontFamily="@font/grobold" android:textSize="24sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="37dp"
            android:layout_height="44dp" app:srcCompat="@drawable/icon_carrot2"
            android:id="@+id/iconCarrot"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.909"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <ImageView
            android:layout_width="85dp"
            android:layout_height="55dp" app:srcCompat="@drawable/icone_shop2"
            android:id="@+id/shopIcone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/numberCarrots"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/lifeText"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.925"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>