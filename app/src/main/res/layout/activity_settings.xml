<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsActivity"
        android:background="@drawable/background_victory">


    <SeekBar
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:id="@+id/volumeBar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/testSon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:splitTrack="false"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/custom_thumb"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testSon" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/volumeBar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:text="testson"/>
    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/icone_fleche_retour"
            android:id="@+id/flecheRetour" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/volumeBar" app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Volume"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle4"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="37sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="0.516" android:textAlignment="center"/>
    <TextView
            android:text="Volume"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle3" android:layout_marginBottom="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@android:color/holo_orange_light" android:textAlignment="center"/>
    <TextView
            android:text="Vibration"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle5"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="37sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="0.516" android:textAlignment="center"/>
    <TextView
            android:text="Vibration"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle6" android:layout_marginBottom="8dp"
            android:layout_marginTop="250dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0"
            android:textColor="@android:color/holo_orange_light" android:textAlignment="center"/>

</android.support.constraint.ConstraintLayout>