<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShopActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/box1">
            <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Boutique"
                            android:layout_width="366dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mainTitle4" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" android:textSize="37sp" android:fontFamily="@font/grobold"
                            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
                            app:layout_constraintHorizontal_bias="0.516" android:textAlignment="center"/>
                    <TextView
                            android:text="Boutique"
                            android:layout_width="366dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/mainTitle3" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp" android:textSize="36sp" android:fontFamily="@font/grobold"
                            app:layout_constraintVertical_bias="0.0"
                            android:textColor="@android:color/holo_orange_light" android:textAlignment="center"/>
                    <TextView
                            android:text="500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/nbCarrot"
                            android:layout_centerVertical="true" android:layout_alignParentEnd="true"
                            android:layout_marginEnd="50dp" android:fontFamily="@font/grobold" android:textSize="18sp"
                            android:textColor="@color/colorPrimaryDark"/>
                    <ImageView
                            android:layout_width="58dp"
                            android:layout_height="48dp" tools:srcCompat="@drawable/icon_carrot2"
                            android:id="@+id/imageView8" android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <ImageView
                        android:id="@+id/img1"
                        android:layout_width="148dp"
                        android:layout_height="175dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical" app:srcCompat="@drawable/skin_lapinou"
                        android:contentDescription="TODO"/>

                <RelativeLayout
                        android:id="@+id/itemDetail1"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/itemName0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Lapinou Jaune"
                            android:textColor="@android:color/background_dark"
                            android:textSize="24sp" android:fontFamily="@font/grobold"/>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/item0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <ImageView
                        android:id="@+id/img0"
                        android:layout_width="148dp"
                        android:layout_height="175dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical" app:srcCompat="@drawable/skin_lapinou_blanc"/>

                <RelativeLayout
                        android:id="@+id/itemDetail0"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/itemName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Lapinou Blanc"
                            android:textColor="@android:color/background_dark"
                            android:textSize="24sp" android:fontFamily="@font/grobold"/>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <ImageView
                        android:id="@+id/img2"
                        android:layout_width="148dp"
                        android:layout_height="175dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical" app:srcCompat="@drawable/skin_lapinou_blanc"/>

                <RelativeLayout
                        android:id="@+id/itemDetail2"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/itemName2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Lapinou Blanc"
                            android:textColor="@android:color/background_dark"
                            android:textSize="24sp" android:fontFamily="@font/grobold"/>


                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:padding="5dp">

                <ImageView
                        android:id="@+id/img3"
                        android:layout_width="148dp"
                        android:layout_height="175dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical" app:srcCompat="@drawable/skin_lapinou_blanc"/>

                <RelativeLayout
                        android:id="@+id/itemDetail3"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/itemName3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:ellipsize="marquee"
                            android:focusable="false"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="Lapinou Blanc"
                            android:textColor="@android:color/background_dark"
                            android:textSize="24sp" android:fontFamily="@font/grobold"/>


                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>