<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:background="#6b9b33"
        android:id="@+id/layoutVictory">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/background_victory"
            android:id="@+id/decor"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="258dp"
            android:layout_height="226dp" app:srcCompat="@drawable/skin_lapinou"
            android:id="@+id/imageLapinou"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="336dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Gagné"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle2" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="37sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@color/colorPrimaryDark"
            app:layout_constraintHorizontal_bias="0.516"/>
    <TextView
            android:text="Gagné"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTitle" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLapinou" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="36sp" android:fontFamily="@font/grobold"
            app:layout_constraintVertical_bias="0.0" android:textColor="@android:color/holo_orange_light"/>
    <ImageView
            android:layout_width="368dp"
            android:layout_height="374dp" app:srcCompat="@drawable/feux_artifice"
            android:id="@+id/fireworks" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.169" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="88dp" app:srcCompat="@drawable/icon_circle_white"
            android:id="@+id/imageView24" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.828"
            app:layout_constraintVertical_bias="0.801"/>
    <ImageView
            android:layout_width="108dp"
            android:layout_height="107dp" app:srcCompat="@drawable/icon_circle" android:id="@+id/imageView16"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.869" app:layout_constraintVertical_bias="0.813"/>
    <ImageView
            android:layout_width="102dp"
            android:layout_height="113dp" app:srcCompat="@drawable/icon_carrot"
            android:id="@+id/imageView25"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.969"
            app:layout_constraintVertical_bias="0.847"/>
    <TextView
            android:text="+10"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/carrotTxt" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.816" app:layout_constraintVertical_bias="0.789"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"/>
</android.support.constraint.ConstraintLayout>