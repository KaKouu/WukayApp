<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WhatIsThisActivity"
        android:background="@drawable/bg_what_is_this">

    <Button
            android:text="Commencer !"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:textSize="24sp"
            android:background="@drawable/rounded_button" android:fontFamily="@font/grobold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/animalAnwser2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="162dp"
            android:layout_height="143dp" app:srcCompat="@drawable/animaux_mouton_silhouette"
            android:id="@+id/animalPic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/arrow" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="117dp"
            android:layout_height="138dp"
            android:id="@+id/animalAnwser1"
            app:srcCompat="@drawable/animaux_girafe"
            app:layout_constraintEnd_toStartOf="@+id/animalAnwser2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="340dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.592"/>
    <ImageView
            android:layout_width="98dp"
            android:layout_height="120dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/animalAnwser2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp" app:srcCompat="@drawable/animaux_lion"
            android:id="@+id/animalAnwser3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913"/>
    <ImageView
            android:layout_width="145dp"
            android:layout_height="125dp" app:srcCompat="@drawable/icon_arrow"
            android:id="@+id/arrow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/animalAnwser2"/>
    <TextView
            android:layout_width="279dp"
            android:layout_height="42dp"
            android:id="@+id/resultat" android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>