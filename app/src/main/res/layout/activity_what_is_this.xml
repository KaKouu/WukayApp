<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WhatIsThisActivity">

    <Button
            android:text="Commencer !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
    />
    <ImageView
            android:layout_width="143dp"
            android:layout_height="145dp" app:srcCompat="@android:drawable/checkbox_off_background"
            android:id="@+id/animalPic"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.502"/>
    <ImageView
            android:layout_width="86dp"
            android:layout_height="103dp"
            android:id="@+id/animalAnwser1"
            android:layout_marginTop="328dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/chien" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="86dp"
            android:layout_height="103dp" app:srcCompat="@drawable/mouton"
            android:id="@+id/animalAnwser2"
            app:layout_constraintStart_toEndOf="@+id/animalAnwser1"
            android:layout_marginStart="40dp" android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/animalPic" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startButton" app:layout_constraintVertical_bias="0.042"/>
    <ImageView
            android:layout_width="86dp"
            android:layout_height="103dp" app:srcCompat="@drawable/lion"
            android:id="@+id/animalAnwser3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginTop="328dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/animalAnwser2" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.717" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>