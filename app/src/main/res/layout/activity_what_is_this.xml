<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WhatIsThisActivity"
        android:background="#629c44">

    <ImageView
            android:layout_width="383dp"
            android:layout_height="569dp" app:srcCompat="@drawable/bg_what_is_this"
            android:id="@+id/imageView2"
            android:scaleType="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Commencer !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
    />
    <ImageView
            android:layout_width="162dp"
            android:layout_height="143dp" app:srcCompat="@drawable/animaux_mouton_silhouette"
            android:id="@+id/animalPic"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.558"/>
    <ImageView
            android:layout_width="107dp"
            android:layout_height="121dp"
            android:id="@+id/animalAnwser1"
            android:layout_marginTop="328dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.549"
            app:srcCompat="@drawable/animaux_girafe" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="115dp"
            android:layout_height="141dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/animalAnwser2"
            app:layout_constraintStart_toEndOf="@+id/animalAnwser1"
            android:layout_marginStart="40dp"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/animalPic"/>
    <ImageView
            android:layout_width="111dp"
            android:layout_height="120dp" app:srcCompat="@drawable/animaux_lion"
            android:id="@+id/animalAnwser3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:layout_marginTop="328dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/animalAnwser2" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.686"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultat" android:textSize="30sp"
            android:textAlignment="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/animalAnwser2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startButton" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.925"/>
</android.support.constraint.ConstraintLayout>