<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/WhatIsThisActivity"
        tools:context=".WhatIsThisActivity"
        android:background="@drawable/bg_what_is_this">

    <ImageView
            android:layout_width="162dp"
            android:layout_height="143dp" app:srcCompat="@drawable/animaux_mouton_silhouette"
            android:id="@+id/animalPic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="117dp"
            android:layout_height="138dp"
            android:id="@+id/animalAnwser1"
            app:srcCompat="@drawable/animaux_girafe"
            app:layout_constraintEnd_toStartOf="@+id/animalAnwser2"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="338dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.592"/>
    <ImageView
            android:layout_width="162dp"
            android:layout_height="143dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/animalAnwser2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp" app:srcCompat="@drawable/animaux_lion"
            android:id="@+id/animalAnwser3"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913"/>
    <TextView
            android:layout_width="279dp"
            android:layout_height="42dp"
            android:id="@+id/resultat" android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/grobold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="152dp" app:srcCompat="@drawable/animaux_mouton"
            android:id="@+id/animalAns" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/animalPic" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="84dp"
            android:layout_height="43dp"
            android:id="@+id/nameAnimal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintVertical_bias="0.045" android:fontFamily="@font/grobold"/>
</android.support.constraint.ConstraintLayout>