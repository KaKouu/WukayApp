<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WhatIsThisAnimalTutoActivity" android:background="@drawable/bg_what_is_this">

    <ImageView
            android:layout_width="148dp"
            android:layout_height="115dp" app:srcCompat="@drawable/animaux_chat_silhouette"
            android:id="@+id/tutSilhouette" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="143dp" app:srcCompat="@drawable/icon_arrow"
            android:id="@+id/tutArrow" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tutSilhouette" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tutAnimal2" app:layout_constraintVertical_bias="0.384"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="105dp"
            android:layout_height="184dp" app:srcCompat="@drawable/animaux_lama"
            android:id="@+id/tutAnimal3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.869"/>
    <ImageView
            android:layout_width="165dp"
            android:layout_height="121dp" app:srcCompat="@drawable/animaux_chat"
            android:id="@+id/tutAnimal2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/startButton"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintVertical_bias="0.877"/>
    <ImageView
            android:layout_width="123dp"
            android:layout_height="121dp" app:srcCompat="@drawable/animaux_chien"
            android:id="@+id/tutAnimal1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="388dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="69dp"
            android:layout_height="76dp" app:srcCompat="@drawable/curseur"
            android:id="@+id/tutCurseur" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.605"
            app:layout_constraintVertical_bias="0.846"/>
    <Button
            android:text="Commencer !"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/startButton"
            android:textSize="24sp"
            android:background="@drawable/rounded_button" android:fontFamily="@font/grobold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/animalAnwser2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>