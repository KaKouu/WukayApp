<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:ads="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/placher"
            android:gravity="center"
            android:layout_gravity="center">
        <TextView
                android:text="140"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/numberCarrots"
                android:fontFamily="@font/grobold" android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="13dp"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginStart="261dp"
                android:layout_marginBottom="23dp"
                android:layout_marginTop="17dp" android:layout_alignParentStart="true"/>
        <TextView
                android:text="10 / 10"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/lifeText" android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                android:layout_alignParentEnd="true" android:layout_marginEnd="237dp"
                android:layout_marginTop="17dp"
                android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp" android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"/>
        <ImageView
                android:layout_width="42dp"
                android:layout_height="37dp"
                android:id="@+id/imageRetour"

                android:layout_marginStart="146dp"
                android:layout_marginEnd="172dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="20dp"

                android:layout_alignParentEnd="true" tools:srcCompat="@drawable/icone_fleche_retour"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/button_settings"
                android:layout_marginTop="11dp" android:layout_alignParentEnd="true" android:layout_marginEnd="109dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="201dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="19dp" tools:srcCompat="@drawable/ic_parameter"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/placher"
            android:gravity="center"
            android:layout_gravity="center">
        <Button
                android:text="Jouer !"
                android:layout_width="109dp"
                android:layout_height="58dp"
                android:id="@+id/playButton"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/grobold" android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp" android:layout_alignParentStart="true"
                android:layout_marginStart="251dp" android:layout_marginTop="14dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="5dp"/>
        <TextView
                android:text="Niveau : 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/levelCounter"
                android:fontFamily="@font/grobold" android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="256dp"
                android:layout_alignBaseline="@+id/playButton"></TextView>

    </RelativeLayout>
    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header"
            android:fillViewport="true">
        <LinearLayout
                android:id="@+id/myLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_levels_2"
                android:fillViewport="true">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" ads:srcCompat="@drawable/arbre" android:id="@+id/imageView5"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>