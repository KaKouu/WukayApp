<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:ads="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/placher"
            android:gravity="center"
            android:layout_gravity="center">
        <TextView
                android:text="140"
                android:layout_width="104dp"
                android:layout_height="33dp"
                android:id="@+id/numberCarrots"
                android:fontFamily="@font/grobold" android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="41dp"
                android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginStart="456dp"
                android:layout_marginBottom="21dp"
                android:layout_marginTop="17dp" android:layout_alignParentStart="true"/>
        <TextView
                android:text="10 / 10"
                android:layout_width="98dp"
                android:layout_height="32dp"
                android:id="@+id/lifeText" android:textSize="24sp"
                android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/grobold"
                android:layout_alignParentEnd="true" android:layout_marginEnd="479dp"
                android:layout_marginTop="17dp"
                android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="21dp" android:layout_alignParentStart="true"
                android:layout_marginStart="24dp"/>
        <ImageView
                android:layout_width="61dp"
                android:layout_height="42dp"
                android:id="@+id/imageRetour"

                android:layout_marginStart="174dp"
                android:layout_marginEnd="366dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="17dp"

                android:layout_alignParentEnd="true" tools:srcCompat="@drawable/icone_fleche_retour"
                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="116dp"
                android:layout_height="44dp"
                android:id="@+id/button_settings"
                android:layout_marginTop="13dp" android:layout_alignParentEnd="true" android:layout_marginEnd="184dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="301dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="13dp" tools:srcCompat="@drawable/ic_parameter"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/placher"
            android:gravity="center"
            android:layout_gravity="center">
        <Button
                android:text="Jouer !"
                android:layout_width="217dp"
                android:layout_height="56dp"
                android:id="@+id/playButton"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/grobold" android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp" android:layout_alignParentStart="true"
                android:layout_marginStart="371dp" android:layout_marginTop="11dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="2dp"/>
        <TextView
                android:text="Niveau : 0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/levelCounter"
                android:fontFamily="@font/grobold" android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" android:layout_alignParentStart="true"
                android:layout_marginStart="17dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="256dp"
                android:layout_alignBaseline="@+id/playButton"></TextView>

    </RelativeLayout>
    <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/footer"
            android:layout_below="@+id/header"
            android:fillViewport="true">
        <LinearLayout
                android:id="@+id/myLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_levels_2"
                android:fillViewport="true">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>